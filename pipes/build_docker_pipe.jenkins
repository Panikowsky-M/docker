#!groovy

properties([disableConcurrentBuilds()])

pipeline {
   agent{
	label 'master'
   }
     options {
	buildDiscarder(logRotator(numToKeepStr: '15', artifactNumToKeepStr: '15'))
	timestamps()
	}
  stages {
	stage("СборкаОбразаДокер") {
	  steps {
 	     
	      sh 'docker build awesomesite/ -t awesomedockered$BUILD_NUMBER'
	      sh 'docker images'
	   }
         }

   	  stage("ЗапускКонтейнера"){
  	   steps {
	      	  sh 'docker run --rm --name awesome_d$BUILD_NUMBER -p 83:83 -d awesomedockered$BUILD_NUMBER'
	      	  sh 'docker ps -a'
     	     }
     	  }
	
   	stage("ОчисткаМеста"){
	 steps {
		sh 'bash ./awesomesite/confs/countD.sh'
		sh 'docker rm -f awesome_d$BUILD_NUMBER'
		sh 'echo Последний контейнер был удален'
		sh 'echo При необходимости стирайте образы вручную'
	     }
	  }
  }
}
